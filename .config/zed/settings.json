// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "colorize_brackets": true,
  "vim_mode": false,
  "context_servers": {
    "mcp-server-context7": {
      "enabled": false,
      "settings": {
        "context7_api_key": ""
      }
    },
    "mcp-server-axiom": {
      "enabled": false,
      "settings": {
        "config_path": "~/config.txt"
      }
    }
  },
  "agent": {
    "always_allow_tool_actions": false,
    "default_profile": "coder",
    "profiles": {
      "coder": {
        "name": "Coder",
        "tools": {
          "thinking": true,
          "project_notifications": true,
          "terminal": true,
          "read_file": true,
          "open": true,
          "now": true,
          "move_path": true,
          "list_directory": true,
          "grep": true,
          "find_path": true,
          "fetch": true,
          "diagnostics": false,
          "delete_path": true,
          "create_directory": true,
          "copy_path": true,
          "edit_file": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "minimap": {
    "show": "auto"
  },
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "icon_theme": "Material Icon Theme",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "buffer_font_family": "Cascadia Code",
  "ui_font_family": "Cascadia Code",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "disable_ai": true,
  "terminal": {
    "shell": {
      "program": "zsh"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "binary": { "path_lookup": true },
      "initialization_options": {
        "rustc": {
          "source": "/usr/lib/rustlib/src/rust/library"
        },
        "cargo": {
          "features": "all"
        },
        "checkOnSave": true,
        "check": {
          "command": "clippy"
        }
      }
    },
    "wakatime": {
      "binary": {
        //  "path": "/home/erenay/.cargo/bin/wakatime-ls
      },
      "initialization_options": {
        "wakatime_cli_path": "wakatime-cli"
      }
    },

    "biome": {
      "settings": {
        "enabled": false
      }
    }
  } /*
  "languages": {
    "Rust": {
      "language_servers": ["rust-analyzer", "wakatime"]
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server", "wakatime"]
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "wakatime"]
    },
    "Svelte": {
      "language_servers": [
        "svelte-language-server",
        "vtsls",
        "wakatime",
        "vscode-html-language-server"
      ]
    }
  },*/,

  "languages": {
    "Svelte": {
      "language_servers": [
        "eslint",
        "tailwindcss-language-server",
        "svelte-language-server",
        "wakatime",
        "json-language-server"
      ]
    }
  },
  "autosave": "on_focus_change"
}
